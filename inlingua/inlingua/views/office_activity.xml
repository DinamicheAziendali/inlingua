<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--VIEW-->
        <record model="ir.ui.view" id="office_office_view_form">
            <field name="name">view.form.office.office</field>
            <field name="model">office.office</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <group>
                            <field name="street"/>
                            <field name="city"/>
                        </group>
                        <group>
                            <field name="state_id"/>
                            <field name="zip"/>
                        </group>
                        <group>
                            <field name="website" widget="url"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="fax"/>
                            <field name="email"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>